// Zed settings
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed

{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "disable_ai": false,

  // Vim
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "cursor_shape": {
      "normal": "block",
      "insert": "bar",
      "replace": "underline",
      "visual": "hollow"
    }
  },
  "relative_line_numbers": true,
  "vertical_scroll_margin": 10,
  "cursor_blink": false,
  "hide_mouse": "on_typing",

  "theme": "GitHub Dark Default",
  // "theme": "Rasha Capital Dark",
  // "theme": "Zero Trust Light",
  "icon_theme": "Material Icon Theme",

  // formatting
  "remove_trailing_whitespace_on_save": true,
  "format_on_save": "on",
  "show_completions_on_input": true,
  "show_edit_predictions": false, // switches off zed ai crap
  "use_smartcase_search": true,

  "git": { "inline_blame": { "enabled": false } },

  // Language specific settings
  "languages": {
    "Python": {
      "debuggers": ["Debugpy"],
      "language_servers": ["basedpyright", "ruff"],
      "format_on_save": "on",
      "auto_indent_on_paste": true,
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.organizeImports.ruff": true,
        "source.fixAll.ruff": false
      }
    },
    "Markdown": {
      "format_on_save": "prettier",
      "use_on_type_format": false,
      "allow_rewrap": "anywhere",
      "soft_wrap": "editor_width",
      "prettier": {
        "allowed": true
      }
    }
  },
  "python.linter": "ruff", // is this really not working??
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    }
  },

  // LLM
  "agent": {
    "default_profile": "minimal",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-haiku-latest"
    },
    "button": false
  },

  // Panel visibility settings
  "outline_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "debugger": {
    "button": false
  },
  "notification_panel": {
    "button": false
  }
}
